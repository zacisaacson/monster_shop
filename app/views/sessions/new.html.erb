<h1 class='mt-4 mb-3'>Login</h1>

<%= form_tag '/login' do %>
  <section class='form-group form-width'>
    <p>
      <%= label_tag :email_address %>
      <%= email_field_tag :email, @user.email, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </p>

    <p class='justify-content-center row'>
      <%= submit_tag 'Login', class: 'btn btn-primary mt-2' %>
    </p>
  </section>
<% end %>
