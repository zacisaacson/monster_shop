<h1 class='mt-4 mb-2'>All Users</h1>

<br>

<table class="table table-striped table-bordered cart-table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Date Created</th>
      <th scope="col">Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="user-<%= user.id %>">
        <th scope="row"><%= link_to "#{user.name}", "/admin/users/#{user.id}" %></th>
        <td><%= user.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= user.titleize_role %></td>
      </tr>
    <% end %>
  </tbody>
</table>
